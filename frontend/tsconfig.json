{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    //
    "env.d.ts",
    "src/**/*.js",
    "src/**/*.ts"
  ],
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "noEmit": true,
    "lib": [
      //
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ],
    "types": [
      //
      "vite/client"
    ]
  },

  "references": [
    {
      "path": "./tsconfig.config.json"
    }
  ]
}
